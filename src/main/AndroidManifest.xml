<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mfajar8.wordpress.pahlawanku">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".abjadActivity"
            android:label="@string/title_activity_abjad"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".Views.HeroDetailActivity" />
        <activity android:name=".Views.IntroActivity" />
        <activity android:name=".Views.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Views.MainActivity" />
    </application>

</manifest>